<h1>Edit Wiki</h1>
<div class="row">
	<div class="col-md-8">
		<%= render partial: 'form', locals: { wiki: @wiki } %>
	</div>
</div>

<% if @wiki.private? %>
	<div class="col-md-4">
		 <%= render partial: 'collaborators/form', locals: { wiki: @wiki } %>

		 <% if Collaborator.exists?(wiki_id: @wiki.id) %>
		 		<%= render partial: 'collaborators/show'%>
		 <% end %>
	</div>
<% end %>
