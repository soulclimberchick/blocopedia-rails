<h1>All Wikis</h1>
<div class="row">
	<div class="col-md-8">
		<% @wikis.each do |wiki| %>
		<% if policy(wiki).show? %>
			<div class="media">
		     <div class="media-body">
		       <h4 class="media-heading">
		         <%= link_to markdown(wiki.title), wiki %>
		       </h4>
					 <small>
      				submitted <%= time_ago_in_words(wiki.created_at) %> ago by <%= wiki.user.username %>
    			 </small>
		     </div>
		  </div>
		<% end %>
		<% end %>
	</div>
</div>
<br />
<% if user_signed_in? %>
	<div class="col-md-4">
		<%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
	</div>
<% end %>
